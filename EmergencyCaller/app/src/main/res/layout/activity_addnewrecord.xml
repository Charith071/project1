<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homestyle"
    tools:context="com.example.charith.emergencycaller.Addnewrecord">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/homestyle"
        android:gravity="center"
        android:text="Add new  Contact"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_nametxt_id"
        android:layout_width="301dp"
        android:layout_height="57dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="61dp"
        android:backgroundTint="#fff"
        android:ems="10"
        android:textColor="#fff"
        android:textSize="20dp"
        android:hint="NAME"
        android:inputType="textPersonName"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/add_numbertxt_id"
        android:layout_width="301dp"
        android:layout_height="57dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="33dp"
        android:backgroundTint="#fff"
        android:ems="10"
        android:textSize="20dp"
        android:textColor="#fff"
        android:hint="NUMBER"
        android:inputType="number"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_nametxt_id" />

    <Button
        android:id="@+id/add_addbtn_id"
        android:layout_width="146dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/homestyle"
        android:text="ADD"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_numbertxt_id" />

    <Button
        android:id="@+id/add_clearbtn_id"
        android:layout_width="146dp"
        android:layout_height="51dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/homestyle"
        android:text="CLEAR"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_numbertxt_id" />
</android.support.constraint.ConstraintLayout>
