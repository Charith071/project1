<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homestyle"
    tools:context="com.example.charith.emergencycaller.Update_table">

    <AutoCompleteTextView
        android:id="@+id/update_serchtxt_id"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="82dp"
        android:backgroundTint="#fff"
        android:drawableLeft="@mipmap/ic_search_white_24dp"
        android:drawablePadding="10dp"
        android:hint="Search"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/update_nametxt_id"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="41dp"
        android:backgroundTint="#fff"
        android:ems="10"
        android:hint="NAME"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_serchtxt_id" />

    <EditText
        android:id="@+id/update_numbertxt_id"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="#fff"
        android:ems="10"
        android:hint="NUMBER"
        android:inputType="numberSigned"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_nametxt_id" />

    <Button
        android:id="@+id/update_clearbtn_id"
        android:layout_width="131dp"
        android:layout_height="53dp"
        android:layout_marginEnd="47dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/homestyle"
        android:text="Clear"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_numbertxt_id" />

    <Button
        android:id="@+id/update_updatebtn_id"
        android:layout_width="131dp"
        android:layout_height="53dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/homestyle"
        android:text="UPDATE"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_numbertxt_id" />
</android.support.constraint.ConstraintLayout>
